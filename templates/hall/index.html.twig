    <div class="couronne">
    <img src="{{ asset('build/images/couronne.png') }}" alt="couronne">
    </div>
    <div id="podium-box" class="row" style="height: 600px">
        <div class="col-md-4 step-container m-0 p-0">
            <div>
            </div>

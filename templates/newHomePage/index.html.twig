{% block body %}
    <header>
        <div class="view" style="background-image: url('/build/images/bg.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
            <div class="mask rgba-gradient d-flex justify-content-center align-items-center">
                <div class="container">
                    <div class="row mt-5">
                        <div class="col-md-6 mb-5 mt-md-0 mt-5 white-text text-center text-md-left">
                            <h1 class="h1-responsive font-weight-bold wow fadeInLeft" data-wow-delay="0.3s">Play right now! </h1>
                            <hr class="hr-light wow fadeInLeft" data-wow-delay="0.3s">
                            <h3 class="mb-3 wow fadeInLeft" data-wow-delay="0.3s">Do you know everything about SUPERHEROES? <br> Come and Join Us on KAPOUT ! </h3>
                        </div>
                        <div class="col-md-6 col-xl-5 mb-4">
                            <div class="card2 wow fadeInRight " data-wow-delay="0.3s">
                                <div class="card-body">
                                    <div class="text-center">
                                        <h3 class="white-text">
                                            <i class="fas fa-user white-text"></i>Registration</h3>
                                        <hr class="hr-light">
                                    </div>
                                    {{ form_start(form) }}
                                    <div class="md-form">
                                        <i class="fas fa-puzzle-piece prefix white-text active"></i>
                                       {{ form_widget(form.pin) }}
                                    </div>
                                    <div class="md-form">
                                        <i class="fas fa-ghost prefix white-text active"></i>
                                        {{ form_widget(form.login) }}
                                        {{ form_errors(form.login) }}
                                    </div>
                                    <div class="text-center mt-4">
                                        <button class="btn btn-indigo">{{ button_label|default('save') }}</button>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="row py-5">
                <div class="col-md-12 text-center">
                    <h3>Welcome to the KAPOUT minigame, you are now entering the world of KAPOUT 4.0.<br>
                        We hope you'll enjoy it!</h3>
                </div>
            </div>
        </div>
    </main>
